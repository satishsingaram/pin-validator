pipeline {
    agent any
    tools {
        gradle "GRADLE_LATEST"
    }

    triggers {
        pollSCM('*/5 * * * *')
    }

    stages {
        stage('Compile') {
            steps {
                sh 'gradle clean'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'gradle build'
            }
            post {
                always {
                    junit '**/build/test-results/test/TEST-*.xml'
                }
            }
        }
    }
    post {
        failure {
            echo 'build failed'
        }
    }
}