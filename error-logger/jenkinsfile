pipeline {
    agent any
    tools {
            gradle 'myGradle'
    }

    triggers {
        pollSCM('*/5 * * * *')
    }

    stages {
        stage('Compile') {
            steps {
                sh 'pwd'
                dir(error-logger){
                    sh 'pwd'
                    sh 'gradle -b build.gradle build'
                }
            }
        }
    }
    post {
        failure {
            echo 'build failed'
        }
    }



}